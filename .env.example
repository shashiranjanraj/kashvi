# .env values override config/app.json
DB_DRIVER=sqlite
DATABASE_DSN=kashvi.db
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
JWT_SECRET=change-me-in-production
APP_PORT=8080
APP_ENV=local

# ── gRPC ───────────────────────────────────────────────────────────────────────
GRPC_PORT=9090                # port the gRPC server listens on

# ── MongoDB (log storage) ──────────────────────────────────────────────────────
MONGO_URI=                    # e.g. mongodb://localhost:27017  (leave blank to disable)
MONGO_LOG_DB=kashvi_logs      # MongoDB database for logs
MONGO_LOG_COLLECTION=app_logs # MongoDB collection for logs

# ── Concurrency & Performance ─────────────────────────────────────────────────
WORKER_POOL_SIZE=50           # bounded goroutine pool size
RATE_LIMIT_MAX=2000           # max requests per minute per IP

# ── Storage ────────────────────────────────────────────────────────────────────
STORAGE_DISK=local            # local | s3
STORAGE_LOCAL_ROOT=storage    # root directory for the local disk
STORAGE_URL=http://localhost:8080/storage  # public URL for local files

# S3-compatible driver (AWS S3, MinIO, DigitalOcean Spaces, Cloudflare R2)
S3_BUCKET=
S3_REGION=us-east-1
S3_KEY=
S3_SECRET=
S3_ENDPOINT=         # leave empty for real AWS; set for MinIO / R2 / Spaces
S3_URL=              # base public URL (defaults to https://bucket.s3.region.amazonaws.com)
